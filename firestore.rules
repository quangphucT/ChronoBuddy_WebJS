// Firebase Firestore Security Rules
// Copy these rules to your Firebase Console -> Firestore Database -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to pageLogs collection
    match /pageLogs/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to visitors collection  
    match /visitors/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to analyticsSummary collection
    match /analyticsSummary/{document} {
      allow read, write: if true;
    }
  }
}
